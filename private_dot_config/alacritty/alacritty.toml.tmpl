{{- if (eq .chezmoi.os "darwin") -}}
SHELL: &SHELL /opt/homebrew/bin/fish
{{- else }}
SHELL: &SHELL /home/linuxbrew/.linuxbrew/bin/zsh
{{- end }}

import = [
    "~/.config/alacritty/catppuccin-frappe.toml"
]

[env]
TERM = "xterm-256color"

[window]
startup_mode = "Maximized"
decorations =  "None"
padding = { x = 18, y = 16 } 
dynamic_padding = false
opacity = 0.9

[font]
size = 12.0

[font.normal]
family = "JetBrainsMono Nerd Font"
style = "Regular"

[font.bold]
family = "JetBrainsMono Nerd Font"
style = "Bold"

[font.bold_italic]
family = "JetBrainsMono Nerd Font"
style = "Bold Italic"

[font.italic]
family = "JetBrainsMono Nerd Font"
style = "Italic"

[shell]
program = *SHELL
args = ["-lc","tmux -u new-session -As main ";" set-option -g detach-on-destroy off"]


